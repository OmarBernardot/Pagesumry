{
  "manifest_version": 3,
  "name": "PageSumry",
  "version": "1.0",
  "description": "Extension that enables users to either generate a summary of the current webpage or ask any questions regarding that web page",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "<all_urls>",
    "https://pagesumry-geej78byr-omarbernardot-gmailcoms-projects.vercel.app"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
